<?xml version="1.0" encoding="UTF-8"?>
<modelo>
<elements>
    <id>
        <type>text</type>
        <options>
            <label>Code</label>
            <class>maskCode</class>
            <required>true</required>
            <description>Numbers separated by ( . ). EX: 5.04</description>
            <validators>
                <regex>
                    <validator>regex</validator>
                    <options>
                        <pattern>/^(([0-9]\.?)+)$/</pattern>
                        <messages>
                            <regexNotMatch>This field should contain numbers only</regexNotMatch>
                        </messages>
                    </options>
                </regex>
                <strlen>
                    <validator>StringLength</validator>
                    <options>
                        <min>1</min>
                        <max>7</max>
                    </options>
                </strlen>
            </validators>
        </options>
    </id>
    <name>
        <type>text</type>
        <options>
            <label>Name</label>
            <required>true</required>
                <validators>
                    <alnum>
                        <validator>StringLength</validator>
                        <options>
                            <allowWhiteSpace>true</allowWhiteSpace>
                        </options>
                    </alnum>
                </validators>
        </options>
    </name>
    <description>
        <type>textarea</type>
        <options>
            <label>Description</label>
        </options>
    </description>
    <type>
        <type>radio</type>                
        <options>
            <required>true</required>
            <label>Type</label>
            <value>AND</value>
            <separator> </separator>
            <multioptions>
                <E>Incoming</E>
                <S>Outgoing</S>
                <O>Other</O>
            </multioptions>
        </options>
    </type>
</elements>
</modelo>
