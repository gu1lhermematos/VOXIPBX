<?xml version="1.0" encoding="UTF-8"?>
<modelo>
    <general>
        <elements>
            <init_day>
                <type>text</type>
                <options>
                    <label>Period from:</label>
                    <required>true</required>
                    <description>dd/mm/YYYY hh:mm</description>
                </options>
            </init_day>

            <end_day>
                <type>text</type>
                <options>
                    <required>true</required>
                    <label>To:</label>                    
                    <description>dd/mm/YYYY hh:mm</description>
                </options>
            </end_day>
            
	    <status>
		<type>MultiCheckbox</type>
		<options>
                    <label>Status</label>
                    <checked>checked</checked>
		   <separator></separator>
	           <multioptions>
			   <ALERT>Warning</ALERT>
			   <CRI>Critical</CRI>
			   <ERR>Error</ERR>
			   <INF>Info</INF>
			   <DEB>Debug</DEB>
		   </multioptions>
		</options>
	    </status>

            <source>
                <type>text</type>
                <options>
                    <label>Source</label>
                    <description></description>
                    <required></required>
                </options>
            </source>

            <dest>
                <type>text</type>
                <options>
		    		<label>Destination</label>
                    <description> </description>
                    <required></required>
                </options>
            </dest>

		<real_time>
			<type>radio</type>
			<options>
				<separator></separator>
				<label>Real time</label>
				<multioptions>
					<yes>Yes</yes>
					<no>No</no>
				</multioptions>
			</options>
		</real_time>

        </elements>
    </general>
</modelo>
